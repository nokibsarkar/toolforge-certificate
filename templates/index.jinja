<body>
    {% if user %}
        <form><a href="login.php?logout"><button>প্রস্থান</button></a></form>
        <h1>
            স্বাগতম {{user.bn_name}}
        </h1>
        <div>
            <details>
                <summary>চলমান কর্মশালা</summary>
                <ol>
                    {% for workshop in user.workshops %}
                        <li><a href="workshop.php?ID={{workshop.id}}">
                                {{workshop.title}}
                            </a>(
                            {{workshop.from}} - {{workshop.to}}
                        </li>
                        {% endfor %}
                </ol>
            </details>
            <details id="details">
                <summary>সনদপত্র</summary>
                <ol style='margin-left: 5%;'>
                    {% for certificates in user.certificates %}
                        <li><a href='certify.php?i={{certificate.id}}' class='cert'>
                                {{certificate.title}}
                            </a></li>
                        {% endfor %}
                </ol>
                {% else %}
                    <a href="login.php"><button>প্রবেশ</button></a>
                    {% endif %}
            </details>
        </div>

        <div style="margin-top: 5%;">
